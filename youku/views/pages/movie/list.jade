extends ../../layout

block content
	script.
		$(function(){
		});

		function doDelete(id){
			$.delete('/admin/movie/' + id, function(data, textStatus, xhr) {
				console.log(data);
				alert(data.info);
			});
		}

	.container
		.l-list
			table.table.table-hover
				thead
					tr
						td #
						td 编号
						td 标题
						td 二级标题
						td 操作
				tbody
				each m,i in movies
					tr
						td #{i+1}
						td #{m._id}
						td #{m.title || m.name}	
						td #{m.subtitle || m.director}
						td 
							a.btn.btn-link(href="/admin/movie/add?id=#{m._id}") 修改
							a.btn.btn-link(onclick="doDelete('#{m._id}')") 删除
